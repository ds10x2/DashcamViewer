<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:elevation="3dp"
        android:id="@+id/top">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/baseline_arrow_back_24"
            android:background="#00ff0000"
            android:padding="10dp"
            android:id="@+id/btnBack"></ImageButton>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="위치 선택하기"
            android:textColor="#000"
            android:fontFamily="@font/nanumsquareroundb"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoDragView="@id/pannelFront"
        app:umanoPanelHeight="250dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pannelBack">
            <androidx.fragment.app.FragmentContainerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mapView"
                android:name="com.google.android.gms.maps.SupportMapFragment">
            </androidx.fragment.app.FragmentContainerView>
            <TextView
                android:id="@+id/textAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="70dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="위치"
                android:fontFamily="@font/nanumsquareroundeb"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/pannelFront"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:background="@color/main_background">
            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/baseline_dehaze_24"
            android:id="@+id/dehaze"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPreview"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="60dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="위치를 선택해주세요."
                android:textColor="#000"
                android:fontFamily="@font/nanumsquareroundb"
                android:textSize="14dp"
                android:visibility="visible">
            </TextView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/dehaze"
                android:layout_marginTop="30dp"
                android:background="@color/main_background"
                android:visibility="gone">
                <VideoView
                    android:id="@+id/videoPreview"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="16:9"
                    app:layout_constraintWidth_default="percent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">
                </VideoView>
                <SeekBar
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/videoPreview"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/seekBar"
                    android:progressDrawable="@drawable/seekbar_progress"
                    android:thumb="@drawable/seekbar_thumb"
                    android:padding="4dp"

                    ></SeekBar>
                <TextView
                    android:id="@+id/textPreviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/seekBar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="파일명"
                    android:textColor="#000"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textPreviewTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="날짜"
                    android:textColor="#000"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:textSize="11dp"/>
                <TextView
                    android:id="@+id/textLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textDate"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:text="위치 정보"
                    android:textColor="#000"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:textSize="11dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/btnFavorite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/pannelFront"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="즐겨찾기에 추가"
                android:fontFamily="@font/nanumsquareroundb"
                android:textColor="#fff"
                android:background="@color/main_color"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/pannelFront"
                app:layout_constraintRight_toRightOf="parent"
                android:text="공유하기"
                android:fontFamily="@font/nanumsquareroundb"
                android:textColor="#000"
                android:background="#fff"
                android:visibility="gone"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>



</androidx.constraintlayout.widget.ConstraintLayout>